// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model SettlementLocation {
  id   Int    @id @default(autoincrement())
  name String @unique
  gear Gear[]
}

model Gear {
  id                   Int                 @id @default(autoincrement())
  name                 String              @unique
  gearKeywords         GearKeyword[]
  settlementLocation   SettlementLocation? @relation(fields: [settlementLocationId], references: [id])
  settlementLocationId Int?
  affinities           GearAffinity[]
}

model GearKeyword {
  id   Int    @id @default(autoincrement())
  name String @unique
  gear Gear[]
}

model GearAffinity {
  id     Int   @id @default(autoincrement())
  gear   Gear  @relation(fields: [gearId], references: [id])
  gearId Int
  side   Side
  color  Color
}

enum Side {
  TOP
  RIGHT
  BOTTOM
  LEFT
}

enum Color {
  RED
  GREEN
  BLUE
}
